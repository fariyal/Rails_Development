
<div class="row">
 <div class="col-md-6 col-md-offset-3">
 <div class="well">
   <%= form_for :event, url: event_update_path(@event) do |f| %>
   
     <%= f.label :title %>
     <%= f.text_field :eventtitle, class: "form-control" %>          <%= f.label :venu %>
     <%= f.text_field :venue, class: "form-control" %>      <%= f.label :discription %>
     <%= f.text_area :discription, size: "10x3", class: "form-control" %><br>
    <div class="date_select">
     <%= f.label :event_date %>
     <%= f.date_select :date, class: "form-control"%>
     </div><br>
     <div class="date_select">
     <%= f.label :event_time %>
     <%= f.time_select :time, class: "form-control"%>
     </div>
     <br>
     <%= f.label :status %>
     <%= f.select :status, [ 'Open', 'Close']%>
   
  <br>
  <br>
  <span style="padding-left: 230px">
     <%= f.submit "update event", class: "btn btn-primary"%></span>
   <% end %>
 </div>
 </div>
</div>