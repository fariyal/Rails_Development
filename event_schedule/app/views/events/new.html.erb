<%= link_to 'Create events',event_new_form_path, :class=> "btn-warning" %>

<center><h1>Create new event</h1></center><div class="row">
 <div class="col-md-6 col-md-offset-3">
 <div class="well">
   <%= form_for :event do |f| %>
         <%= f.label :title %>
     <%= f.text_field :title, class: "form-control" %>          <%= f.label :venu %>
     <%= f.text_field :venu, class: "form-control" %>      <%= f.label :description %>
     <%= f.text_area :description, size: "10x3", class: "form-control" %>      <%= f.label :event_date %>
     <div class="datetime_select">
       <%= select_month Time.now, prefix: :event,
                                  field_name: :"event_date(2i)",
                                  class: "form-control" %> /
       <%= select_day Time.now, prefix: :event,
                                field_name: :"event_date(3i)",
                                class: "form-control" %> /
       <%= select_year Time.now, prefix: :event,
                                 field_name: :"event_date(1i)",
                                 start_year: Time.now.year - 1,
                                 class: "form-control" %>
     </div>
      <%= f.label :event_time %>
     <div class="datetime_select">
     <%= select_hour 12, prefix: :event,
                                 field_name: :"event_date(4i)",
                                 ampm: true,
                                 class: "form-control" %> :
       <%= select_minute 0, prefix: :event,
                                   field_name: :"event_date(5i)",
                                   class: "form-control" %>
      </div>
  <br>
     <%= f.submit "Create event", class: "btn btn-primary" %>
   <% end %>
 </div>
 </div>
</div>

